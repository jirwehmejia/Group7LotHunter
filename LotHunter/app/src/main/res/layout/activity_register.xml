<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/teal_200"
    tools:context=".Register">


    <ImageView
        android:layout_marginTop="50dp"
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/userregis"
        android:layout_below="@+id/image"
        android:hint="Username"
        android:textSize="12dp"
        android:textColorHint="@color/black"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/password"
        android:layout_below="@+id/userregis"
        android:hint="Password"
        android:textSize="12dp"
        android:textColorHint="@color/black"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="90dp"
        android:inputType="textPassword"
        android:layout_marginTop="10dp" />
    <EditText
        android:id="@+id/confirmpass"
        android:layout_below="@+id/password"
        android:hint="Confirm Password"
        android:textSize="12dp"
        android:textColorHint="@color/black"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnsingup2"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@id/confirmpass"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Singup"
        android:textColor="@color/white"
        app:backgroundTint="#020709" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/btnsingup2"
        android:layout_centerHorizontal="true">



        <TextView
            android:id="@+id/ArTextView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Already Register?"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_below="@id/btnsingup2"/>

        <TextView
            android:id="@+id/textview_regis"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text=" REGISTER"
            android:textColor="#0000A0"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ArTextView"
            android:layout_below="@id/btnlogin"/>
    </LinearLayout>

</RelativeLayout>